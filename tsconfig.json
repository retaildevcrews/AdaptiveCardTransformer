{
	"compilerOptions": {
		"declaration": true,
		"target": "es2016",
		"module": "commonjs",
		"strict": true,
		"outDir": "./lib",
		"sourceMap": true,
		"incremental": true,
		"tsBuildInfoFile": "./lib/.tsbuildinfo",
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
